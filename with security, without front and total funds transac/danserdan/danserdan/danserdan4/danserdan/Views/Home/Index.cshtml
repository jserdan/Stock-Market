@section Scripts {
    <script>
        // Market Movers Live Updates
        function updateMarketMovers() {
            fetch('/Home/GetMarketMovers')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Get all market mover cards
                        const stockCards = document.querySelectorAll('.market-movers-tile .stock-card');
                        
                        if (stockCards.length >= 3 && data.gainers && data.gainers.length >= 3) {
                            // Update top 3 gainers
                            for (let i = 0; i < Math.min(stockCards.length, data.gainers.length); i++) {
                                const gainer = data.gainers[i];
                                updateCardWithData(stockCards[i], gainer, true);
                            }
                        }
                    }
                })
                .catch(error => console.error('Error updating market movers:', error));
        }
        
        // Helper function to update a card with stock data
        function updateCardWithData(card, stockData, isPositive) {
            if (!card || !stockData) return;
            
            // Update the card with the stock data
            const initial = stockData.Symbol.substring(0, 1);
            card.querySelector('.d-flex:first-child div:first-child span').textContent = initial;
            card.querySelector('h6').textContent = stockData.Symbol;
            card.querySelector('small').textContent = stockData.Name;
            
            // Get price element and update with proper currency
            const priceElement = card.querySelector('.text-white.fw-bold');
            if (priceElement) {
                // Extract numeric price from the stockData.Price (remove $ if present)
                const numericPrice = parseFloat(stockData.Price.replace(/[$₱]/g, ''));
                if (!isNaN(numericPrice)) {
                    // Store original USD price in data attribute
                    priceElement.setAttribute('data-price-usd', numericPrice.toFixed(2));
                    
                    // Get current currency and format price accordingly
                    const currentCurrency = localStorage.getItem('preferredCurrency') || 'USD';
                    if (currentCurrency === 'PHP') {
                        priceElement.textContent = '₱' + (numericPrice * 56.5).toFixed(2);
                    } else {
                        priceElement.textContent = '$' + numericPrice.toFixed(2);
                    }
                    
                    // Add price class for future currency updates
                    priceElement.classList.add('price');
                }
            }
            
            // Set the appropriate class for change
            const changeElement = card.querySelector('.text-success.small, .text-danger.small');
            if (changeElement) {
                // Set the appropriate icon and text
                const icon = isPositive ? '<i class="bi bi-arrow-up-right"></i> ' : '<i class="bi bi-arrow-down-right"></i> ';
                changeElement.innerHTML = icon + stockData.Change;
            }
            
            // Set appropriate card colors based on positive/negative change
            if (isPositive) {
                // For gainers (positive change)
                card.style.borderLeft = '4px solid rgba(74, 222, 128, 0.8)';
                const iconDiv = card.querySelector('.d-flex:first-child div:first-child');
                if (iconDiv) {
                    iconDiv.style.backgroundColor = 'rgba(74, 222, 128, 0.8)';
                }
            } else {
                // For losers (negative change)
                card.style.borderLeft = '4px solid rgba(239, 68, 68, 0.8)';
                const iconDiv = card.querySelector('.d-flex:first-child div:first-child');
                if (iconDiv) {
                    iconDiv.style.backgroundColor = 'rgba(239, 68, 68, 0.8)';
                }
            }
        }

        // Update prices every 5 seconds
        function updatePrices() {
            fetch('/Home/UpdatePrices')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // After updating prices, refresh the market movers
                        updateMarketMovers();
                    }
                })
                .catch(error => console.error('Error updating prices:', error));
        }

        // Set up intervals for updates
        setInterval(updateMarketMovers, 5000); // Update market movers every 5 seconds
        setInterval(updatePrices, 60000); // Update prices every minute

        // Initial updates
        document.addEventListener("DOMContentLoaded", function() {
            // Update market movers and apply current currency
            updateMarketMovers();
            
            // Add click event listeners to stock cards
            setupStockCardClickHandlers();
            
            // Apply the current currency to price elements
            const savedCurrency = localStorage.getItem('preferredCurrency') || 'USD';
            const priceElements = document.querySelectorAll('.price');
            
            priceElements.forEach(el => {
                const usdPrice = parseFloat(el.getAttribute('data-price-usd'));
                if (!isNaN(usdPrice)) {
                    if (savedCurrency === 'PHP') {
                        el.textContent = '₱' + (usdPrice * 56.5).toFixed(2);
                    } else {
                        el.textContent = '$' + usdPrice.toFixed(2);
                    }
                }
            });
            
            // Listen for currency changes
            document.addEventListener('currencyChanged', function(e) {
                const currency = e.detail.currency;
                const priceElements = document.querySelectorAll('.price');
                
                priceElements.forEach(el => {
                    const usdPrice = parseFloat(el.getAttribute('data-price-usd'));
                    if (!isNaN(usdPrice)) {
                        if (currency === 'PHP') {
                            el.textContent = '₱' + (usdPrice * 56.5).toFixed(2);
                        } else {
                            el.textContent = '$' + usdPrice.toFixed(2);
                        }
                    }
                });
            });
            
            setTimeout(updatePrices, 2000); // Delay initial price update slightly
        });
        
        // Function to set up click handlers for stock cards
        function setupStockCardClickHandlers() {
            // Use event delegation to handle clicks on all stock cards (including dynamically added ones)
            document.addEventListener('click', function(event) {
                // Find the closest stock-card-clickable parent
                const stockCard = event.target.closest('.stock-card-clickable');
                if (stockCard) {
                    const symbol = stockCard.getAttribute('data-symbol');
                    if (symbol) {
                        // Navigate to the stock details page
                        window.location.href = '/Home/Stocks?symbol=' + encodeURIComponent(symbol);
                    }
                }
            });
        }
    </script>
