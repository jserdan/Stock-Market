@model string

<div class="container">
    <h2>Login</h2>
    <form method="post" asp-action="Login">
        <div class="mb-3">
            <label for="username" class="form-label">Username or Email:</label>
            <input type="text" class="form-control" id="username" name="username" required minlength="3" maxlength="50" />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password?</a>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">
                <i class="bi bi-exclamation-circle me-2"></i> @ViewBag.Error
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i> @ViewBag.Message
            </div>
        }
    </form>
</div>
