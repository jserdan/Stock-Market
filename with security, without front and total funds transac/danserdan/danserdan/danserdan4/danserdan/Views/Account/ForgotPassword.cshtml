@model string

<div class="container">
    <h2>Forgot Password</h2>
    <p>Enter your email address below and we'll send you instructions to reset your password.</p>
    
    <form method="post" asp-action="ForgotPassword">
        <div class="mb-3">
            <label for="email" class="form-label">Email Address:</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Reset Password</button>
            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary ms-2">Back to Login</a>
        </div>
        
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">
                <i class="bi bi-exclamation-circle me-2"></i> @ViewBag.Error
            </div>
        }
        
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i> @ViewBag.Message
            </div>
        }
    </form>
</div>
