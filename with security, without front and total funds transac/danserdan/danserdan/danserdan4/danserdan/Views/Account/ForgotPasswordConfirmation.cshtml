@model string

<div class="container">
    <h2>Password Reset</h2>
    
    <div class="alert alert-success mt-3">
        <i class="bi bi-check-circle me-2"></i> @ViewBag.Message
    </div>
    
    @if (ViewBag.TempPassword != null)
    {
        <div class="card mt-4 mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Your Temporary Password</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">Please use this password to log in:</p>
                <div class="alert alert-info mt-2">
                    <code class="fs-5">@ViewBag.TempPassword</code>
                </div>
                <p class="text-danger mt-3 mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i> 
                    For security reasons, please change your password immediately after logging in.
                </p>
            </div>
        </div>
    }
    
    <div class="mt-4">
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Back to Login</a>
    </div>
</div>
